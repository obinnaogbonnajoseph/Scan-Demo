<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_active="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/inputFocused" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/inputNormal" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_active="false">
        <shape android:shape="rectangle">
            <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/inputDisabled" />
        </shape>
    </item>
</selector>