<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.futronictech.ui.StartActivity">

    <Button
        android:id="@+id/btn_onboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_onboard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/btn_attendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/button_attendance"
        app:layout_constraintTop_toBottomOf="@id/btn_onboard"
        app:layout_constraintLeft_toLeftOf="@id/btn_onboard"
        app:layout_constraintRight_toRightOf="@id/btn_onboard"/>

</android.support.constraint.ConstraintLayout>
