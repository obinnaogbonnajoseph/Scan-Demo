<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dev_list"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            tools:mockup_crop="@string/test_image"
            android:contentDescription="@string/test_image" />

        <!-- This TextView holds the username for one particular developer -->
        <TextView
            android:id="@+id/tv_dev_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textSize="22sp"
            tools:text="Obi-wan Kenobi"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>